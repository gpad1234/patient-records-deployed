# Environment Configuration for PatientRecords

# Application
APP_ENV=development
APP_PORT=8080
APP_SOCKET_PORT=9999
THREAD_POOL_SIZE=50

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/patient_records
DATABASE_USER=healthcare_user
DATABASE_PASSWORD=change_me_in_production

# Cache (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI/LLM
OPENAI_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4-turbo

# Authentication
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
SAML_KEYSTORE_PATH=/path/to/keystore.jks
SAML_KEYSTORE_PASSWORD=change_me

# Security
JWT_SECRET=your_jwt_secret_change_me
ENCRYPTION_KEY=your_aes_256_key_change_me

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/patient-records/app.log

# EHR Integration
EHR_SYSTEM=epic
EHR_API_URL=https://ehr.hospital.com/api
EHR_API_KEY=your_ehr_api_key

# HIPAA Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=/var/log/patient-records/audit.log
ENABLE_PHI_LOGGING=false

# Feature Flags
ENABLE_INSURANCE_SERVER=false
ENABLE_LAB_SERVER=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
